function test_if(x)
{
  if (x == 42)
    print("jackpot\n");
  else
    print("no luck\n");
}

function test_loop()
{
  var i = 0;
  while (1) {
    if (i == 5)
      continue;
    if (i > 10)
      break;
    print(i);
    i = i + 1;
  }
}

function f(x, y) {
  # expressions
  var z = x + y;
  y = 2 * x + 0.5;

  # function call
  print("hello, world!\n");
  x = print(x, 5) + print(print(1,2), 0);

  # gratuitous block
  {
    var k = 123;
    print(x, k);
  }

  return x + 1;
}

function main(args) {
  var x = 1;
  print("hello, world", f(x, 0) + 1.5, "\n");
  return 0;
}
